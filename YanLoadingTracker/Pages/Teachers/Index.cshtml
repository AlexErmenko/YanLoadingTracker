@page
@using YanLoadingTracker.Models
@model YanLoadingTracker.Pages.Teachers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn-outline-success btn-block btn  "
       asp-page="Create">
        Создать новую
    </a>
</p>
<div class="table-responsive">
    <table class="table table-hover text-center table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].IdDepartmentNavigation)
            </th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (Teacher item in Model.Teacher)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartmentNavigation.Name)
                </td>

                <td>
                    <a class="btn btn-outline-warning btn-block"
                       asp-page="./Edit"
                       asp-route-id="@item.Id">
                        Редактировать
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-info btn-block"
                       asp-page="./Details"
                       asp-route-id="@item.Id">
                        Детали
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-danger btn-block"
                       asp-page="./Delete"
                       asp-route-id="@item.Id">
                        Удалить
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>