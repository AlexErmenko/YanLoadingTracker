@page
@model YanLoadingTracker.Pages.Loads.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Load</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Load.IdDisciplineNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Load.IdDisciplineNavigation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Load.IdTeacherNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Load.IdTeacherNavigation.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Load.IdTypeNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Load.IdTypeNavigation.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./EditModel"
       asp-route-id="@Model.Load.IdTeacher"
       asp-route-type="@Model.Load.IdType"
       asp-route-d="@Model.Load.IdDiscipline"
       class="btn btn-outline-warning btn-block">
        Редактировать
    </a>
    <a asp-page="./Index">Вернутся назад к списку</a>
</div>